<style>
  .maincontainer
  {
  background: #5F9EA0;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  }
.box
{ width: 60%;
  height: auto;
  background: #B0E0E6; 
  border-radius: 30px;
  padding: 20px;
  
  
}
 .heading{
    font-size: 25px;
    letter-spacing: 1px;
    font-weight: bold;
    color: black;
    display: flex;
    flex-direction: row;
    margin-bottom: 10px;
 } 
  
 .daysstyle{
 display: flex;
 flex-direction: row;
 justify-content: space-evenly;
 }

 .buttonstyle{
    width: 100%;
 }

</style>
<html>
    <head>
        <title>Flight Interface</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
 
        <div class="maincontainer">
        <div class="box">
            <div class="heading">
              <a href="/flight/displayallflights"><img src="/images/displayrecords.png" width="30";></a>
                <img src="/images/flight.png" width="40";>
                Flight Interface     
            </div>

            <form action="/flight/flightsubmit" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col-md-6">
                  <label for="flightname" class="form-label"><b>Flight Name</b></label>
                  <input type="text" class="form-control" name="flightname" id="flightname">
                </div>

                <div class="col-md-6">
                    <label for="flightype" class="form-label"><b>Flight Type</b></label>
                    <select id="flighttype" name="flightype" class="form-select">
                      <option selected>Choose Type...</option>
                      <option>Economy</option>
                      <option>Business</option>
                      <option>Economy/Business</option>
                    </select>
                  </div>

                  <div class="col-md-6">
                    <label for="noofseats" class="form-label"><b>Total Seats</b></label>
                    <input type="text" class="form-control" name="noofseats" id="seats">
                  </div>
                  
                  <div class="col-md-6">
                    <label for="days" class="form-label"><b>Select Flight Days</b></label> 
                    <div class="daysstyle">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox"  name="days" value="Mon" id="days">
                    <label class="form-check-label" for="days">
                      Mon
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Tue" id="days">
                    <label class="form-check-label" for="days">
                      Tue
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Wed" id="days">
                    <label class="form-check-label" for="days">
                      Wed
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Thu" id="days">
                    <label class="form-check-label" for="days">
                      Thu
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Fri" id="days">
                    <label class="form-check-label" for="days">
                      Fri
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Sat" id="days">
                    <label class="form-check-label" for="days">
                      Sat
                    </label>
                  </div>
                  

                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="days" value="Sun" id="days">
                    <label class="form-check-label" for="days">
                      Sun
                    </label>
                  </div>
                  </div>
                 </div>

                 <div class="col-md-6">
                    <label for="sourcecity" class="form-label"><b>Source City</b></label>
                    <select id="source" name="sourcecity" class="form-select">
                      <option selected>Source City...</option>
                    </select>
                  </div>

                  <div class="col-md-6">
                    <label for="destination" class="form-label"><b>Destination City</b></label>
                    <select id="destination" name="destinationcity" class="form-select">
                      <option selected>Destination City...</option>
                    </select>
                  </div>

                  <div class="col-md-6">
                    <label for="deptime" class="form-label"><b>Departure Time</b></label>
                    <input type="time" class="form-control" name="deptime" id="depttime">
                  </div>

                  <div class="col-md-6">
                    <label for="arrtime" class="form-label"><b>Arrival Time</b></label>
                    <input type="time" class="form-control" name="arrtime" id="arrtime">
                  </div>

                  <div class="col-md-6">
                    <label for="company" class="form-label"><b>company</b></label>
                    <input type="text" class="form-control" name="company" id="company">
                  </div>

                  <div class="col-md-6">
                    <label for="logo" class="form-label"><b>Logo</b></label>
                    <input type="file" class="form-control" name="logo" id="logo">
                  </div>

                  <div class="col-6">
                    <button type="submit" class="btn btn-primary buttonstyle">Submit</button>
                  </div>

                  <div class="col-6">
                    <button type="reset" class="btn btn-primary buttonstyle" >Reset</button>
                  </div>

                  <div class="col-12" style="display: flex; justify-content: center; padding: 5px; font-weight: bold;">
                  <%=message%>
                  </div>
             </form>  
        </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</html>