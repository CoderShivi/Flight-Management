
    <style>
        .maincontainer{
        background:#4682B4	;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        }
      .box
      { width: 80%;
        height: auto;
        background:#F5F5F5; 
        border-radius: 30px;
        padding: 20px;
        
        
      }
       .heading{
          font-size: 25px;
          letter-spacing: 1px;
          font-weight: bold;
          color: black;
          display: flex;
          flex-direction: row;
          margin-bottom: 10px;
       } 
        
       .daysstyle{
       display: flex;
       flex-direction: row;
       justify-content: space-evenly;
       }
      
       .buttonstyle{
          width: 100%;
       }
      
      </style>
      <html>
          <head>
              <title>Flight Interface</title>
              <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
              <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
              <script src="/javascripts/project.js"></script>
          </head>

        <body>
            <div class="maincontainer">
            <div class="box">
              <div class="heading">
                <a href="/flight/flightinterface"> <img src="/images/addrecords.png" width="30";></a>
                <img src="/images/flight.png" width="40";>
               List of Flights    
            </div>
            <table class="table table-hover">
                <thead>
                  <tr>
                    
                    <th scope="col">Flight Name/<br>Flight Type</th>
                    <th scope="col">Days/<br>Seats</th>
                    <th scope="col">Source city/<br> Deptime</th>
                    <th scope="col">Destination city/<br> Arrtime</th>
                    <th scope="col">Comapany</th>
                    <th scope="col">Logo</th>
                    <th scope="col">Edit/Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% data.map((item)=>{%>
                    <th scope="row"><%=item.flightname%>
                        <br>
                        <%=item.flightype%> 
                    </th>
                    <td>
                    <%=item.days %>
                    <br>
                     Seats:<%=item.noofseats %>
                     
                    </td>
                    <td>
                        <%=item.source%>
                        <br>
                        <%=item.deptime %>
                    </td>
                    <td>
                        <%=item.destination %>
                        <br>
                        <%=item.arrtime %>
                    </td>

                    <td>
                        <%=item.company %>
                    </td>

                    <td>
                        <a href="/flight/searchbyidforimages?fid=<%=item.flightid %>"><img src="/images/<%=item.logo %>" width="30"/></a>
                    </td>
                    <td>
                      <a href="/flight/searchbyid?fid=<%=item.flightid%>">
                        Edit/Delete
                      </a>
                    </td>
                  </tr>
                 <%})%>
                </tbody>
              </table>
              </div>
              </div>
        </body>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</html>